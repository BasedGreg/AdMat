<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>Graphite</defName>
    <label>graphite</label>
    <description>A crystallized form of carbon that occurs as a mineral in some rocks.</description>
    <graphicData>
      <texPath>Things/Item/Graphite</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <resourceReadoutPriority>First</resourceReadoutPriority>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <resourceReadoutAlwaysShow>true</resourceReadoutAlwaysShow>
    <statBases>
      <MarketValue>1</MarketValue>
      <Mass>0.4</Mass>
      <StuffPower_Armor_Sharp>0.42</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.26</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>1.06</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>1</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.65</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.6</BluntDamageMultiplier>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>1.5</deepCommonality>
    <deepCountPerPortion>40</deepCountPerPortion>
    <deepLumpSizeRange>
      <min>12</min>
      <max>20</max>
    </deepLumpSizeRange>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <color>(51,51,51)</color>
      <commonality>0.9</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>0.4</MaxHitPoints>
        <Flammability>0.5</Flammability>
      </statFactors>
      <smeltable>true</smeltable>
    </stuffProps>
  </ThingDef>
  
  <ThingDef ParentName="ResourceBase">
    <defName>Plastene</defName>
    <label>plastene</label>
    <description>Recently, a thinktank of highly-respected glitterworld scientists discovered a method for forming an alloy made of plasteel and graphene. Together this new, lighter material has incredible strength as well as exception heat and electrical conductivity.</description>
    <graphicData>
      <texPath>Things/Item/Plastene</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <MarketValue>30</MarketValue>
      <Mass>0.18</Mass>
      <StuffPower_Armor_Sharp>4.78</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>3.12</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>5.08</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>23</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>24</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>1.7</SharpDamageMultiplier>
      <BluntDamageMultiplier>1.9</BluntDamageMultiplier>
    </statBases>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>0.00001</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(44,58,60)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>5.8</MaxHitPoints>
        <Beauty>1</Beauty>
        <Flammability>0.01</Flammability>
        <WorkToMake>6.2</WorkToMake>
				<WorkToBuild>4.2</WorkToBuild>
        <MeleeWeapon_CooldownMultiplier>0.75</MeleeWeapon_CooldownMultiplier>
      </statFactors>
      <smeltable>true</smeltable>
    </stuffProps>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
  </ThingDef>
  
