  <ThingDef ParentName="ResourceBase">
    <defName>GrapheneCartridge</defName>
    <label>chemical vapor cartridge</label>
    <description>A specialized cartridge with a very precise sample of fuel and graphite powder. Used in the chemical vapor depositor to produce graphene.</description>
    <graphicData>
